<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:text="XXXXXXX"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardrow_inquiry_name"
        android:gravity="left"/>

    <TextView
        android:text="XXXXXXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardrow_inquiry_bedroomCount"
        android:gravity="left"/>

    <TextView
        android:text="XXXXXXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardrow_inquiry_floorArea"
        android:gravity="left"/>

    <TextView
        android:text="XXXXXXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardrow_inquiry_lotArea"
        android:gravity="left"/>

    <TextView
        android:text="XXXXXXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardrow_inquiry_status"
        android:gravity="left"/>

    <TextView
        android:text="SET TRIP SCHEDULE"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardrow_inquiry_setTripSched"
        android:visibility="gone"
        android:gravity="right"/>

    <TextView
        android:text="SET DECISION"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cardrow_inquiry_setDecision"
        android:visibility="gone"
        android:gravity="right"/>



</LinearLayout>

</android.support.v7.widget.CardView>
